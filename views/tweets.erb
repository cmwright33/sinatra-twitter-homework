<h1>Check what <%=@username%> is tweeting about</h1>

<%= @my_tweets[0][:user][:description]%>
<form action="/" method="get">
<form input="text" title="username" autofocus>
<button>Enter a Username</button>
</form>
  <ul>
  <% @my_tweets.each do |tweet| %>
  <li> <%= tweet[:text] %> </li>
    <p><%= tweet.media.first[:media_url] unless tweet[:media].empty? %></p>
    <a href="www.twitter.com/<%=tweet[:user][:screen_name]%>/status/<%=tweet[:id]%>"</a>
     <%end%>
  </ul>




